<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".busactivities.kwezy.KwezyPriceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/kwezyfare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="@string/ticket_fares"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/kwezypricecard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/kwezyfare"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkyellow">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingStart="20dp"
                android:layout_height="wrap_content">

                <!--Mzuzu-->

                <TextView
                    android:id="@+id/kwezymzprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/mzuzu"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/kwezymzprice1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_kasungu_mwk_13000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezymzprice" />
                <TextView
                    android:id="@+id/kwezymzprice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_lilongwe_mwk_20000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezymzprice1"/>
                <TextView
                    android:id="@+id/kwezymzprice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_blantyre_mwk_32_500"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezymzprice2"/>
                <!--Lilongwe-->
                <TextView
                    android:id="@+id/kwezyllprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/lilongwe"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezymzprice2"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/kwezyllprice1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_kasungu_mwk_10000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezyllprice" />
                <TextView
                    android:id="@+id/kwezyllprice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_mzuzu_mwk_20000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezyllprice1"/>
                <TextView
                    android:id="@+id/kwezyllprice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_blantyre_mwk_20000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezyllprice2"/>

                <!--Blantyre-->
                <TextView
                    android:id="@+id/kwezybtprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/blantyre"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezyllprice3"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/kwezybtprice1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_kasungu_mwk_24000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezybtprice" />
                <TextView
                    android:id="@+id/kwezybtprice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_lilongwe_mwk_20000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezybtprice1"/>
                <TextView
                    android:id="@+id/kwezybtprice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_mzuzu_mwk_32500"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kwezybtprice2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kwezyextrainfo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/darkyellow"
            app:layout_constraintTop_toBottomOf="@id/kwezypricecard1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/kwezyextra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/tickets_can_also_be_bought_via_mpamba_airtel_money_mo626_etc"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/kwezyextra2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/ticket_reschudling_can_be_done_at_the_sales_office_before_departure"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/kwezyextra"
                    tools:layout_editor_absoluteX="24dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

